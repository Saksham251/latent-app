{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,  
    "strict": true,
    "skipLibCheck": true,                          /* Skip type checking all .d.ts files. */
    "composite": true
  },
  "include": [
    "generated",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.ts"
  ]
}
